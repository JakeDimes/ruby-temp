<h1>Editing Account Information</h1>
<!-- If any account errors use the flash to show the messages -->
<% if @account_to_edit.errors.any? %>
  <div class="flash">
    <%@account_to_edit.errors.full_messages.each do |msg| %>
      <%=msg + "."%>
    <%end %>
  </div>
<%end %>
<!--Get populated form with account info and then allow admin to edit it, then button press will update the account-->
<%= form_with(model: @account_to_edit, url: account_edit_save_path(id: @account_to_edit.id), method: "put") do |f| %>
  <%= f.label :fname, 'First Name' %>
  <%= f.text_field :fname %>

  <%= f.label :lname, 'Last Name' %>
  <%= f.text_field :lname %>

  <%= f.label :dotnum, 'Number (.#)' %>
  <%= f.text_field :dotnum %>

  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>

  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit value: 'Update Account', class: "button" %>

<% end %>